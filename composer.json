{
    "name": "nedwors/navigator",
    "description": "A Laravel package to ease defining navigation menus",
    "keywords": [
        "nedwors",
        "laravel",
        "menu",
        "navigation"
    ],
    "homepage": "https://github.com/nedwors/navigator",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Sam Rowden",
            "email": "nedwors@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.21",
        "nunomaduro/larastan": "^3.0",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Nedwors\\Navigator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nedwors\\Navigator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "./vendor/bin/pint",
        "test:lint": "./vendor/bin/pint --test",
        "test:types": "./vendor/bin/phpstan analyse",
        "test:unit": "vendor/bin/pest",
        "test": [
            "@lint",
            "\n\n",
            "@test:lint",
            "\n\n",
            "@test:types",
            "\n\n",
            "@test:unit"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nedwors\\Navigator\\NavigatorServiceProvider"
            ],
            "aliases": {
                "Menu": "Nedwors\\Navigator\\Facades\\Menu"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
